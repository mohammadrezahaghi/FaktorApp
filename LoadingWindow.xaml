<Window x:Class="FactorApp.UI.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" Height="380" Width="320"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True"
        Background="Transparent" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="TemplateRoot">
                            <Border Background="#2C2F33" CornerRadius="5"/>
                            <Border x:Name="PART_Track" />
                            <Border x:Name="PART_Indicator" Background="#5865F2" CornerRadius="5" HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#23272A" CornerRadius="15" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <Image Source="logo.png" Width="90" Height="90" Margin="0,0,0,25"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock x:Name="TxtStatus" Text="...در حال راه‌اندازی" 
                           Foreground="White" FontFamily="iransans" FontSize="13"
                           HorizontalAlignment="Center" Margin="0,0,0,15" TextAlignment="Center"/>

                <ProgressBar x:Name="PrgUpdate" Width="220" Height="8" 
                             Minimum="0" Maximum="100" Value="0" 
                             Visibility="Collapsed" Margin="0,0,0,5"/>

                <TextBlock x:Name="TxtPercent" Text="0%" 
                           Foreground="#B9BBBE" FontSize="12"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>

            <TextBlock x:Name="TxtVersion" Text="v1.0.0" 
                       Foreground="#72767d" FontSize="10" FontFamily="Consolas"
                       VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>