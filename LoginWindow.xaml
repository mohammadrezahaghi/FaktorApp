<Window x:Class="FactorApp.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="600"
        Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FlowDirection="RightToLeft"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <Color x:Key="IconGlowColor">#00C49F</Color>
        <SolidColorBrush x:Key="IconGlowBrush" Color="{StaticResource IconGlowColor}"/>
    </Window.Resources>

    <Border Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="15"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="1">

        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">
                
                <Grid Width="90" Height="90" Margin="0,0,0,25">
                    <Border CornerRadius="30" Background="{StaticResource IconGlowBrush}" Opacity="0.15">
                        <Border.Effect>
                            <BlurEffect Radius="20"/>
                        </Border.Effect>
                    </Border>
                    <Border CornerRadius="30" BorderThickness="1.5" BorderBrush="{StaticResource IconGlowBrush}" Opacity="0.3"/>
                    <materialDesign:PackIcon Kind="AccountCircle" Width="50" Height="50" 
                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                             Foreground="{StaticResource IconGlowBrush}"/>
                </Grid>

                <TextBlock Text="ورود به سیستم"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,35"/>

                <TextBox x:Name="TxtUsername"
                         materialDesign:HintAssist.Hint="نام کاربری"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         materialDesign:HintAssist.Foreground="{DynamicResource SidebarForegroundBrush}"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource IconGlowBrush}"
                         CaretBrush="{StaticResource IconGlowBrush}"/>

                <PasswordBox x:Name="TxtPassword"
                             materialDesign:HintAssist.Hint="رمز عبور"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0,0,0,20"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             materialDesign:HintAssist.Foreground="{DynamicResource SidebarForegroundBrush}"
                             BorderBrush="{DynamicResource MaterialDesignDivider}"
                             materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource IconGlowBrush}"
                             CaretBrush="{StaticResource IconGlowBrush}"/>

                <CheckBox x:Name="ChkRememberMe"
                          Content="مرا به خاطر بسپار"
                          Margin="0,0,0,25"
                          Foreground="{DynamicResource MaterialDesignBody}"
                          Style="{StaticResource MaterialDesignCheckBox}">
                    <CheckBox.Resources>
                        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource IconGlowColor}"/>
                    </CheckBox.Resources>
                </CheckBox>

                <Button Content="ورود"
                        Click="BtnLogin_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{StaticResource IconGlowBrush}"
                        BorderBrush="{StaticResource IconGlowBrush}"
                        Height="45"
                        Margin="0,0,0,10"
                        FontSize="14" FontWeight="Bold"/>

                <Button Content="خروج"
                        Click="BtnExit_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Height="45"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>