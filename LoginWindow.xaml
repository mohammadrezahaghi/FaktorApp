<Window x:Class="FactorApp.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="600"
        Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FlowDirection="RightToLeft"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Border Background="{DynamicResource MaterialDesignPaper}"
            CornerRadius="15"
            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
            BorderThickness="1">

        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="AccountCircle"
                                         Width="80"
                                         Height="80"
                                         Foreground="{DynamicResource MaterialDesignBody}"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>

                <TextBlock Text="ورود به سیستم"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBox x:Name="TxtUsername"
                         materialDesign:HintAssist.Hint="نام کاربری"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         CaretBrush="{DynamicResource MaterialDesignBody}"/>

                <PasswordBox x:Name="TxtPassword"
                             materialDesign:HintAssist.Hint="رمز عبور"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0,0,0,20"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             CaretBrush="{DynamicResource MaterialDesignBody}"/>

                <CheckBox x:Name="ChkRememberMe"
                          Content="مرا به خاطر بسپار"
                          Margin="0,0,0,20"
                          Foreground="{DynamicResource MaterialDesignBody}"/>

                <Button Content="ورود"
                        Click="BtnLogin_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="45"
                        Margin="0,0,0,10"/>

                <Button Content="خروج"
                        Click="BtnExit_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="45"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>