<Page x:Class="FactorApp.UI.Pages.CreateInvoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1000"
      FontFamily="Segoe UI"
      FlowDirection="RightToLeft"
      Title="ثبت فاکتور جدید"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="14">

        <materialDesign:DialogHost Identifier="InvoiceDialog"
                                   x:Name="InvoiceRootDialog">

                <materialDesign:DialogHost.DialogContent>
                        <Grid Margin="20"
                              Width="350">
                                <StackPanel>
                                        <TextBlock Text="تعریف مشتری جدید"
                                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   Margin="0,0,0,20"/>

                                        <TextBox x:Name="QuickCustomerName"
                                                 materialDesign:HintAssist.Hint="نام مشتری"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,10"/>

                                        <TextBox x:Name="QuickCustomerPhone"
                                                 materialDesign:HintAssist.Hint="شماره تماس"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,10"/>

                                        <TextBox x:Name="QuickCustomerAddress"
                                                 materialDesign:HintAssist.Hint="آدرس (اختیاری)"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,10"
                                                 Height="60"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"/>

                                        <TextBox x:Name="QuickCustomerBalance"
                                                 materialDesign:HintAssist.Hint="تراز حساب اولیه (ریال)"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,10"
                                                 Text="0"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Margin="0,20,0,0">
                                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                        Content="انصراف"
                                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                        Content="ذخیره و انتخاب"
                                                        Click="BtnQuickSaveCustomer_Click"/>
                                        </StackPanel>
                                </StackPanel>
                        </Grid>
                </materialDesign:DialogHost.DialogContent>

                <Grid Margin="20">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <materialDesign:Card Grid.Row="0"
                                             Padding="16"
                                             Margin="0,0,0,20"
                                             UniformCornerRadius="8"
                                             materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox x:Name="CmbCustomers"
                                                          materialDesign:HintAssist.Hint="انتخاب مشتری"
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                          DisplayMemberPath="Name"
                                                          SelectedValuePath="Id"
                                                          Margin="0,0,10,0"/>
                                                <Button Grid.Column="1"
                                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                                        ToolTip="افزودن مشتری جدید"
                                                        Click="BtnNewCustomerDialog_Click"
                                                        Padding="0"
                                                        Width="40"
                                                        Height="40">
                                                        <materialDesign:PackIcon Kind="AccountPlus"/>
                                                </Button>
                                        </Grid>

                                        <TextBox Grid.Column="2"
                                                 x:Name="TxtInvoiceDate"
                                                 materialDesign:HintAssist.Hint="تاریخ فاکتور"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="10,0,0,0"
                                                 TextChanged="TxtInvoiceDate_TextChanged"
                                                 LostFocus="TxtInvoiceDate_LostFocus"
                                                 FlowDirection="LeftToRight"
                                                 HorizontalContentAlignment="Right"/>
                                </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Row="1"
                                             Padding="16"
                                             Margin="0,0,0,20"
                                             UniformCornerRadius="8"
                                             materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0"
                                                  x:Name="CmbServices"
                                                  materialDesign:HintAssist.Hint="انتخاب خدمات / کالا"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  Margin="5"
                                                  SelectionChanged="CmbServices_SelectionChanged"/>

                                        <TextBox Grid.Column="1"
                                                 x:Name="TxtQty"
                                                 materialDesign:HintAssist.Hint="تعداد"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Text="1"
                                                 Margin="5"
                                                 PreviewTextInput="NumberValidation"/>

                                        <TextBox Grid.Column="2"
                                                 x:Name="TxtWidth"
                                                 materialDesign:HintAssist.Hint="عرض (متر)"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="5"
                                                 IsEnabled="False"
                                                 PreviewTextInput="DecimalValidation"/>

                                        <TextBox Grid.Column="3"
                                                 x:Name="TxtLength"
                                                 materialDesign:HintAssist.Hint="طول (متر)"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="5"
                                                 IsEnabled="False"
                                                 PreviewTextInput="DecimalValidation"/>

                                        <Button Grid.Column="4"
                                                Click="BtnAddItem_Click"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                ToolTip="افزودن به لیست"
                                                Margin="5"
                                                Height="50"
                                                Width="50"
                                                Padding="0">
                                                <materialDesign:PackIcon Kind="Plus"
                                                                         Width="24"
                                                                         Height="24"/>
                                        </Button>
                                </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Row="2"
                                             Padding="0"
                                             UniformCornerRadius="8"
                                             materialDesign:ElevationAssist.Elevation="Dp2"
                                             VerticalAlignment="Stretch">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Border Background="{DynamicResource MaterialDesignPaper}"
                                                Padding="10"
                                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                BorderThickness="0,0,0,1">
                                                <Grid>
                                                        <TextBlock Text="اقلام فاکتور"
                                                                   VerticalAlignment="Center"
                                                                   FontWeight="Bold"/>
                                                        <Button HorizontalAlignment="Right"
                                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                                Content="حذف انتخاب شده‌ها"
                                                                Click="BtnDeleteSelected_Click"
                                                                Foreground="#D32F2F"
                                                                BorderBrush="#D32F2F"/>
                                                </Grid>
                                        </Border>

                                        <DataGrid Grid.Row="1"
                                                  x:Name="DataGridItems"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  SelectionMode="Extended"
                                                  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                                  materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                                                  Background="{DynamicResource MaterialDesignCardBackground}">
                                                <DataGrid.Columns>
                                                        <DataGridCheckBoxColumn Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                                                ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                                                                EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                                                                <DataGridCheckBoxColumn.Header>
                                                                        <Border Background="Transparent"/>
                                                                </DataGridCheckBoxColumn.Header>
                                                        </DataGridCheckBoxColumn>

                                                        <DataGridTextColumn Binding="{Binding ServiceName}"
                                                                            Header="شرح کالا / خدمات"
                                                                            Width="2*"
                                                                            IsReadOnly="True"/>
                                                        <DataGridTextColumn Binding="{Binding Quantity}"
                                                                            Header="تعداد"
                                                                            Width="0.8*"
                                                                            IsReadOnly="True"/>
                                                        <DataGridTextColumn Binding="{Binding Width}"
                                                                            Header="عرض"
                                                                            Width="0.8*"
                                                                            IsReadOnly="True"/>
                                                        <DataGridTextColumn Binding="{Binding Length}"
                                                                            Header="طول"
                                                                            Width="0.8*"
                                                                            IsReadOnly="True"/>
                                                        <DataGridTextColumn Binding="{Binding UnitPrice, StringFormat=N0}"
                                                                            Header="فی (ریال)"
                                                                            Width="1.5*"
                                                                            IsReadOnly="True"/>
                                                        <DataGridTextColumn Binding="{Binding TotalPrice, StringFormat=N0}"
                                                                            Header="قیمت کل (ریال)"
                                                                            Width="1.5*"
                                                                            FontWeight="Bold"
                                                                            IsReadOnly="True"/>

                                                        <DataGridTemplateColumn Width="Auto">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                                                        ToolTip="حذف این قلم"
                                                                                        Click="BtnDeleteRow_Click">
                                                                                        <materialDesign:PackIcon Kind="Delete"
                                                                                                                 Foreground="Red"/>
                                                                                </Button>
                                                                        </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                        </DataGrid>

                                        <Border Grid.Row="2"
                                                Background="{DynamicResource MaterialDesignPaper}"
                                                Padding="15"
                                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                BorderThickness="0,1,0,0">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Left">
                                                        <TextBlock Text="جمع کل:"
                                                                   FontWeight="Bold"
                                                                   FontSize="16"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock x:Name="TxtSubTotal"
                                                                   Text="0"
                                                                   FontWeight="Bold"
                                                                   FontSize="20"
                                                                   Foreground="{DynamicResource MaterialDesignBody}"
                                                                   Margin="10,0,5,0"/>
                                                        <TextBlock Text="ریال"
                                                                   VerticalAlignment="Bottom"
                                                                   Margin="0,0,0,3"/>
                                                </StackPanel>
                                        </Border>
                                </Grid>
                        </materialDesign:Card>
                        <Grid Grid.Row="3"
                              Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal">
                                        <ToggleButton x:Name="TglIsPaid"
                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                      Click="TglIsPaid_Click"/>
                                        <TextBlock x:Name="TxtPaymentStatus"
                                                   Text="پرداخت نشده"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0"
                                                   FontWeight="Bold"
                                                   Foreground="Red"/>
                                        <ComboBox x:Name="CmbPaymentMethod"
                                                  Width="140"
                                                  materialDesign:HintAssist.Hint="روش پرداخت"
                                                  IsEnabled="False"
                                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                                  Margin="10,0,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                          x:Name="ChkSendWhatsapp"
                                          Content="ارسال خودکار به واتساپ پس از ثبت"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal">

                                        <Button Content="ارسال دستی واتساپ"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Click="BtnManualWhatsapp_Click"
                                                Margin="5,0"/>

                                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Click="BtnPrintMenu_Click"
                                                Margin="5,0"
                                                ToolTip="گزینه‌های چاپ و خروجی">
                                                <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Printer"
                                                                                 Margin="0,0,8,0"/>
                                                        <TextBlock Text="منوی چاپ"/>
                                                        <materialDesign:PackIcon Kind="ChevronUp"
                                                                                 Margin="8,0,0,0"
                                                                                 Width="15"
                                                                                 Height="15"/>
                                                </StackPanel>

                                                <Button.ContextMenu>
                                                        <ContextMenu FlowDirection="RightToLeft"
                                                                     FontFamily="Segoe UI">
                                                                <MenuItem Header="پیش‌نمایش و چاپ"
                                                                          Click="BtnIssueInvoice_Click">
                                                                        <MenuItem.Icon>
                                                                                <materialDesign:PackIcon Kind="PrinterEye"/>
                                                                        </MenuItem.Icon>
                                                                </MenuItem>

                                                                <Separator/>

                                                                <MenuItem Header="کپی عکس فاکتور"
                                                                          Click="BtnCopyImage_Click">
                                                                        <MenuItem.Icon>
                                                                                <materialDesign:PackIcon Kind="ContentCopy"/>
                                                                        </MenuItem.Icon>
                                                                </MenuItem>
                                                                <MenuItem Header="ذخیره فایل عکس (Save as PNG)"
                                                                          Click="BtnSaveImageFile_Click">
                                                                        <MenuItem.Icon>
                                                                                <materialDesign:PackIcon Kind="Image"/>
                                                                        </MenuItem.Icon>
                                                                </MenuItem>
                                                        </ContextMenu>
                                                </Button.ContextMenu>
                                        </Button>

                                        <Button Content="ثبت نهایی و چاپ"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                Click="BtnSaveInvoice_Click"
                                                Margin="5,0"/>
                                </StackPanel>
                        </Grid>

                </Grid>
        </materialDesign:DialogHost>
</Page>