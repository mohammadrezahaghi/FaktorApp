<Page x:Class="FactorApp.UI.Pages.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="900"
      FontFamily="Segoe UI"
      FlowDirection="RightToLeft"
      Title="مدیریت مشتریان">

    <materialDesign:DialogHost x:Name="CustomerDialog"
                               Identifier="CustomerRootDialog"
                               DialogTheme="Inherit">
        <materialDesign:DialogHost.DialogContent>
            <Grid Margin="20"
                  Width="350">
                <StackPanel>
                    <TextBlock x:Name="TxtDialogTitle"
                               Text="تعریف مشتری جدید"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,20"/>

                    <TextBox x:Name="CustInputName"
                             materialDesign:HintAssist.Hint="نام مشتری / نام شرکت"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,10"/>

                    <TextBox x:Name="CustInputPhone"
                             materialDesign:HintAssist.Hint="شماره تماس"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,10"/>

                    <TextBox x:Name="CustInputAddress"
                             materialDesign:HintAssist.Hint="آدرس (اختیاری)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,10"
                             Height="60"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>

                    <TextBox x:Name="CustInputBalance"
                             materialDesign:HintAssist.Hint="تراز حساب اولیه (ریال)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,10"
                             Text="0"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Content="انصراف"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Content="ذخیره اطلاعات"
                                Click="BtnSaveCustomer_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:DialogHost.DialogContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtSearch"
                         materialDesign:HintAssist.Hint="جستجوی نام یا شماره تماس..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="350"
                         HorizontalAlignment="Left"
                         TextChanged="TxtSearch_TextChanged"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         CaretBrush="{DynamicResource MaterialDesignBody}"/>


                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="BtnAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountPlus"
                                                 Margin="0,0,10,0"/>
                        <TextBlock Text="افزودن مشتری جدید"/>
                    </StackPanel>
                </Button>
            </Grid>

            <DataGrid Grid.Row="1"
                      x:Name="DataGridCustomers"
                      Margin="20"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}"
                                        Header="کد"
                                        Width="60"/>
                    <DataGridTextColumn Binding="{Binding Name}"
                                        Header="نام مشتری"
                                        Width="1.5*"/>
                    <DataGridTextColumn Binding="{Binding PhoneNumber}"
                                        Header="تلفن"
                                        Width="1*"/>
                    <DataGridTextColumn Binding="{Binding Balance, StringFormat=N0}"
                                        Header="مانده حساب"
                                        Width="1*"/>
                    <DataGridTextColumn Binding="{Binding Address}"
                                        Header="آدرس"
                                        Width="2*"/>

                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="ویرایش"
                                            Click="BtnEdit_Click">
                                        <materialDesign:PackIcon Kind="Pencil"
                                                                 Foreground="Orange"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="حذف"
                                            Click="BtnDelete_Click">
                                        <materialDesign:PackIcon Kind="Delete"
                                                                 Foreground="Red"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </materialDesign:DialogHost>
</Page>