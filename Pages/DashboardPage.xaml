<Page x:Class="FactorApp.UI.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:helpers="clr-namespace:FactorApp.UI.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="900"
      FontFamily="Segoe UI"
      FlowDirection="RightToLeft"
      Title="داشبورد مدیریتی"
      Loaded="Page_Loaded"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="14"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto">

    <Page.Resources>
        <helpers:ShamsiDateConverter x:Key="ShamsiDateConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
                Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0"
                    Margin="5"
                    Padding="20"
                    Background="#43A047"
                    Foreground="White"
                    materialDesign:ElevationAssist.Elevation="Dp3">
                <StackPanel>
                    <DockPanel>
                        <materialDesign:PackIcon Kind="CashMultiple"
                                Width="30"
                                Height="30"
                                DockPanel.Dock="Right"
                                Opacity="0.8"/>
                        <TextBlock Text="فروش امروز"
                                FontSize="16"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                    </DockPanel>
                    <TextBlock x:Name="TxtTodaySales"
                            Text="0 ریال"
                            FontSize="26"
                            FontWeight="Bold"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1"
                    Margin="5"
                    Padding="20"
                    Background="#1E88E5"
                    Foreground="White"
                    materialDesign:ElevationAssist.Elevation="Dp3">
                <StackPanel>
                    <DockPanel>
                        <materialDesign:PackIcon Kind="Receipt"
                                Width="30"
                                Height="30"
                                DockPanel.Dock="Right"
                                Opacity="0.8"/>
                        <TextBlock Text="سفارشات امروز"
                                FontSize="16"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                    </DockPanel>
                    <TextBlock x:Name="TxtTodayCount"
                            Text="0 عدد"
                            FontSize="26"
                            FontWeight="Bold"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Column="2"
                    Margin="5"
                    Padding="20"
                    Background="#FB8C00"
                    Foreground="White"
                    materialDesign:ElevationAssist.Elevation="Dp3">
                <StackPanel>
                    <DockPanel>
                        <materialDesign:PackIcon Kind="AccountGroup"
                                Width="30"
                                Height="30"
                                DockPanel.Dock="Right"
                                Opacity="0.8"/>
                        <TextBlock Text="کل مشتریان"
                                FontSize="16"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>
                    </DockPanel>
                    <TextBlock x:Name="TxtTotalCustomers"
                            Text="0 نفر"
                            FontSize="26"
                            FontWeight="Bold"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <materialDesign:Card Grid.Row="1"
                             Padding="0"
                             materialDesign:ElevationAssist.Elevation="Dp2"
                             UniformCornerRadius="5"
                             Background="{DynamicResource MaterialDesignCardBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="{DynamicResource MaterialDesignPaper}"
                        Padding="15"
                        CornerRadius="5,5,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Opacity="0.6"/>
                        <TextBlock Text="آخرین سفارشات ثبت شده"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="1"
                          x:Name="DataGridRecent"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="All"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                          Background="{x:Null}"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding InvoiceNumber}"
                                Header="شماره فاکتور"
                                Width="1.5*"/>
                        <DataGridTextColumn Binding="{Binding Customer.Name}"
                                Header="مشتری"
                                Width="2*"/>
                        <DataGridTextColumn Binding="{Binding FinalAmount, StringFormat=N0}"
                                Header="مبلغ (ریال)"
                                Width="1.5*"/>
                        <DataGridTextColumn Binding="{Binding Date, Converter={StaticResource ShamsiDateConverter}}"
                                Header="تاریخ"
                                Width="1.5*"/>
                        <DataGridTextColumn Binding="{Binding Date, StringFormat={}{0:HH:mm}}"
                                Header="ساعت"
                                Width="1*"/>

                        <DataGridTemplateColumn Header="وضعیت"
                                Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesignDivider}"
                                            CornerRadius="4"
                                            Padding="8,2">
                                        <TextBlock Text="{Binding Status}"
                                                   HorizontalAlignment="Center"
                                                   FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>