<Page x:Class="FactorApp.UI.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:helpers="clr-namespace:FactorApp.UI.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1000"
      FontFamily="{DynamicResource MaterialDesignFont}"
      FlowDirection="RightToLeft"
      Title="لیست سفارشات">

    <Page.Resources>
        <helpers:ShamsiDateConverter x:Key="ShamsiDateConverter"/>
        <helpers:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <helpers:BooleanToTextConverter x:Key="BooleanToTextConverter"/>
        <helpers:PaymentMethodToTextConverter x:Key="PaymentMethodToTextConverter"/>

        <Color x:Key="IconGlowColor">#00C49F</Color>
        <SolidColorBrush x:Key="IconGlowBrush" Color="{StaticResource IconGlowColor}"/>

        <Style x:Key="DataGridEditTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#15000000"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenterAlignedColumn" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SidebarForegroundBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Page.Resources>

    <materialDesign:DialogHost Identifier="OrderDetailsDialog" x:Name="DetailsDialog" DialogTheme="Inherit">
        <materialDesign:DialogHost.DialogContent>
            <Grid Margin="25" Width="950" Height="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Grid Width="45" Height="45" Margin="0,0,15,0">
                            <Border CornerRadius="14" Background="{StaticResource IconGlowBrush}" Opacity="0.15">
                                <Border.Effect>
                                    <BlurEffect Radius="8"/>
                                </Border.Effect>
                            </Border>
                            <Border CornerRadius="14" BorderThickness="1" BorderBrush="{StaticResource IconGlowBrush}" Opacity="0.3"/>
                            <materialDesign:PackIcon Kind="ReceiptTextEdit" Width="24" Height="24" 
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     Foreground="{StaticResource IconGlowBrush}"/>
                        </Grid>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ویرایش جزئیات فاکتور" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBlock x:Name="TxtDetailInvoiceNum" Text="شماره فاکتور: ---" FontSize="13" Opacity="0.6"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox x:Name="CmbEditServices" materialDesign:HintAssist.Hint="افزودن کالا/خدمت جدید به این فاکتور"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}" IsEditable="True"
                                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

                        <Button Grid.Column="1" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="افزودن" Click="BtnAddEditItem_Click" Margin="10,0,0,0"
                                BorderBrush="{StaticResource IconGlowBrush}" Foreground="{StaticResource IconGlowBrush}"/>
                    </Grid>
                </StackPanel>

                <DataGrid Grid.Row="1" x:Name="DataGridEditItems" AutoGenerateColumns="False" CanUserAddRows="False"
                          materialDesign:DataGridAssist.CellPadding="8" 
                          BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ServiceName}" Header="شرح کالا" Width="2*" IsReadOnly="True" ElementStyle="{StaticResource CenterAlignedColumn}"/>
                        
                        <DataGridTemplateColumn Header="تعداد" Width="0.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource DataGridEditTextBox}"
                                             TextChanged="Input_TextChanged" PreviewTextInput="NumberValidation"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="عرض" Width="0.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource DataGridEditTextBox}"
                                             Loaded="Dimensions_Loaded"
                                             TextChanged="Input_TextChanged" PreviewTextInput="DecimalValidation"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="طول" Width="0.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Length, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource DataGridEditTextBox}"
                                             Loaded="Dimensions_Loaded"
                                             TextChanged="Input_TextChanged" PreviewTextInput="DecimalValidation"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="فی (ریال)" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding UnitPrice, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource DataGridEditTextBox}"
                                             TextChanged="Price_TextChanged" PreviewTextInput="NumberValidation"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Binding="{Binding TotalPrice, StringFormat=N0}" Header="جمع کل" Width="1.5*" IsReadOnly="True" FontWeight="Bold" ElementStyle="{StaticResource CenterAlignedColumn}"/>

                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="حذف" Click="BtnDeleteEditItem_Click" Height="30" Width="30">
                                        <materialDesign:PackIcon Kind="Delete" Foreground="#FF5252"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="{DynamicResource MaterialDesignPaper}" 
                            BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" CornerRadius="8" Padding="15,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            
                            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0" Opacity="0.6">
                                <TextBlock Text="مبلغ قبلی" FontSize="11"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="TxtOriginalTotal" Text="0" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text=" ریال" FontSize="11" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Width="1" Height="25" Background="{DynamicResource MaterialDesignDivider}" Margin="0,0,20,0"/>

                            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                                <TextBlock Text="مبلغ جدید" FontSize="11" Foreground="{StaticResource IconGlowBrush}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="TxtEditTotal" Text="0" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource MaterialDesignBody}"/>
                                    <TextBlock Text=" ریال" FontSize="12" VerticalAlignment="Bottom" Margin="2,0,0,3" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Width="1" Height="25" Background="{DynamicResource MaterialDesignDivider}" Margin="0,0,20,0"/>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="اختلاف قیمت" FontSize="11"/>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon x:Name="IconDiffArrow" Kind="Minus" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="TxtDiffAmount" Text="0" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text=" ریال" FontSize="11" VerticalAlignment="Bottom" Margin="2,0,0,2" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <Button Content="انصراف" Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                BorderBrush="{DynamicResource SidebarForegroundBrush}" Foreground="{DynamicResource SidebarForegroundBrush}"
                                Height="45"/>
                        
                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                Click="BtnSaveChanges_Click" Margin="10,0,0,0" Height="45"
                                Background="{StaticResource IconGlowBrush}" BorderBrush="{StaticResource IconGlowBrush}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSaveCheck" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="ذخیره تغییرات" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:DialogHost.DialogContent>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16" UniformCornerRadius="8"
                                 materialDesign:ElevationAssist.Elevation="Dp0" Background="{DynamicResource CardBackgroundBrush}"
                                 BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <WrapPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtSearch" materialDesign:HintAssist.Hint="جستجو (نام، شماره فاکتور)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="220" Margin="0,0,10,10"
                                 TextChanged="FilterChanged"
                                 Foreground="{DynamicResource SidebarForegroundBrush}"
                                 BorderBrush="{DynamicResource SidebarForegroundBrush}"
                                 CaretBrush="{DynamicResource SidebarForegroundBrush}"/>

                        <ComboBox x:Name="CmbStatusFilter" materialDesign:HintAssist.Hint="وضعیت چاپ"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}" Width="140" Margin="0,0,10,10"
                                  SelectionChanged="FilterChanged"
                                  Foreground="{DynamicResource SidebarForegroundBrush}"
                                  BorderBrush="{DynamicResource SidebarForegroundBrush}">
                            <ComboBoxItem Content="همه وضعیت‌ها" IsSelected="True"/>
                            <ComboBoxItem Content="ثبت شده (در انتظار)"/>
                            <ComboBoxItem Content="در حال چاپ"/>
                            <ComboBoxItem Content="آماده تحویل"/>
                            <ComboBoxItem Content="تحویل شده"/>
                        </ComboBox>

                        <ComboBox x:Name="CmbPaymentFilter" materialDesign:HintAssist.Hint="وضعیت پرداخت"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}" Width="140" Margin="0,0,10,10"
                                  SelectionChanged="FilterChanged"
                                  Foreground="{DynamicResource SidebarForegroundBrush}"
                                  BorderBrush="{DynamicResource SidebarForegroundBrush}">
                            <ComboBoxItem Content="همه مالی" IsSelected="True"/>
                            <ComboBoxItem Content="تسویه شده (سبز)" Foreground="#4CAF50" FontWeight="Bold"/>
                            <ComboBoxItem Content="بدهکار (قرمز)" Foreground="#F44336" FontWeight="Bold"/>
                        </ComboBox>
                    </WrapPanel>

                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignOutlinedButton}" Click="BtnRefresh_Click" 
                            ToolTip="بروزرسانی لیست" Foreground="{DynamicResource SidebarForegroundBrush}" BorderBrush="{DynamicResource SidebarForegroundBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="بروزرسانی" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Grid.Row="1" Margin="0" Padding="0" UniformCornerRadius="8" 
                                 materialDesign:ElevationAssist.Elevation="Dp0" Background="{DynamicResource CardBackgroundBrush}"
                                 BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{DynamicResource CardBackgroundBrush}" Padding="20" CornerRadius="8,8,0,0"
                            BorderThickness="0,0,0,1" BorderBrush="{DynamicResource MaterialDesignDivider}">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="40" Height="40" Margin="0,0,15,0">
                                <Border CornerRadius="12" Background="{StaticResource IconGlowBrush}" Opacity="0.15">
                                    <Border.Effect>
                                        <BlurEffect Radius="8"/>
                                    </Border.Effect>
                                </Border>
                                <materialDesign:PackIcon Kind="ReceiptText" Width="22" Height="22" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Foreground="{StaticResource IconGlowBrush}"/>
                            </Grid>
                            <TextBlock Text="لیست تمام فاکتورها" VerticalAlignment="Center"
                                       FontFamily="Iransans" FontWeight="Bold" FontSize="16"
                                       Foreground="{DynamicResource SidebarForegroundBrush}"/>
                        </StackPanel>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="DataGridOrders" Background="{x:Null}" 
                              RowBackground="Transparent" AlternatingRowBackground="Transparent"
                              BorderThickness="0" GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="{DynamicResource MaterialDesignDivider}"
                              AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                              materialDesign:DataGridAssist.CellPadding="13 10 10 10" 
                              materialDesign:DataGridAssist.ColumnHeaderPadding="10"
                              VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding InvoiceNumber}" Header="شماره" Width="Auto" MinWidth="80" ElementStyle="{StaticResource CenterAlignedColumn}"/>
                            <DataGridTextColumn Binding="{Binding Customer.Name}" Header="مشتری" Width="1.5*" ElementStyle="{StaticResource CenterAlignedColumn}"/>
                            <DataGridTextColumn Binding="{Binding Date, Converter={StaticResource ShamsiDateConverter}}" Header="تاریخ" Width="1.2*" ElementStyle="{StaticResource CenterAlignedColumn}"/>
                            <DataGridTextColumn Binding="{Binding Date, StringFormat={}{0:HH:mm}}" Header="ساعت" Width="0.8*" ElementStyle="{StaticResource CenterAlignedColumn}"/>

                            <DataGridTemplateColumn Header="وضعیت مالی" Width="1.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <materialDesign:Chip Content="{Binding IsPaid, Converter={StaticResource BooleanToTextConverter}}"
                                                                 Background="{Binding IsPaid, Converter={StaticResource BooleanToColorConverter}}"
                                                                 Foreground="White" FontSize="11" Height="25"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Binding="{Binding PaymentMethod, Converter={StaticResource PaymentMethodToTextConverter}}" Header="روش" Width="1*" ElementStyle="{StaticResource CenterAlignedColumn}"/>
                            <DataGridTextColumn Binding="{Binding FinalAmount, StringFormat=N0}" Header="مبلغ (ریال)" Width="1.5*" FontWeight="Bold" ElementStyle="{StaticResource CenterAlignedColumn}"/>

                            <DataGridTemplateColumn Header="وضعیت چاپ" Width="1.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <materialDesign:Chip Content="{Binding Status}" Style="{StaticResource MaterialDesignOutlineChip}" 
                                                                 BorderBrush="{DynamicResource MaterialDesignDivider}" IsHitTestVisible="False" Margin="0"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="مشاهده جزئیات و ویرایش" Click="BtnDetails_Click" Height="30" Width="30" Margin="2,0">
                                                <materialDesign:PackIcon Kind="FileDocumentEditOutline" Foreground="{StaticResource IconGlowBrush}"/>
                                            </Button>

                                            <Menu materialDesign:MenuAssist.TopLevelMenuItemHeight="30" Background="Transparent">
                                                <MenuItem Header="مدیریت" Height="30" Padding="10,0" Foreground="{DynamicResource SidebarForegroundBrush}">
                                                    <MenuItem Header="تغییر وضعیت چاپ">
                                                        <MenuItem Header="ثبت شده (در انتظار)" Click="ChangeStatus_Click" Tag="Pending"/>
                                                        <MenuItem Header="در حال چاپ" Click="ChangeStatus_Click" Tag="Printing"/>
                                                        <MenuItem Header="آماده تحویل" Click="ChangeStatus_Click" Tag="ReadyToDeliver"/>
                                                        <MenuItem Header="تحویل شده" Click="ChangeStatus_Click" Tag="Delivered"/>
                                                    </MenuItem>
                                                    <Separator/>
                                                    <MenuItem Header="تغییر وضعیت مالی">
                                                        <MenuItem Header="پرداخت شده (نقد)" Click="ChangePayment_Click" Tag="Cash"/>
                                                        <MenuItem Header="پرداخت شده (کارت)" Click="ChangePayment_Click" Tag="Card"/>
                                                        <MenuItem Header="پرداخت شده (کارت به کارت)" Click="ChangePayment_Click" Tag="CardToCard"/>
                                                        <MenuItem Header="پرداخت شده (چک)" Click="ChangePayment_Click" Tag="Cheque"/>
                                                        <Separator/>
                                                        <MenuItem Header="پرداخت نشده (بدهکار)" Click="ChangePayment_Click" Tag="None"/>
                                                    </MenuItem>
                                                </MenuItem>
                                            </Menu>

                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="چاپ / ذخیره" Margin="2,0" Click="BtnPrintMenu_Click" Height="30" Width="30">
                                                <materialDesign:PackIcon Kind="Printer" Foreground="{StaticResource SidebarForegroundBrush}"/>
                                                <Button.ContextMenu>
                                                    <ContextMenu FlowDirection="RightToLeft" FontFamily="Segoe UI">
                                                        <MenuItem Header="چاپ فاکتور (پرینتر)" Click="BtnPrintAction_Click">
                                                            <MenuItem.Icon><materialDesign:PackIcon Kind="Printer"/></MenuItem.Icon>
                                                        </MenuItem>
                                                        <MenuItem Header="ذخیره تصویر (عکس)" Click="BtnSaveImageAction_Click">
                                                            <MenuItem.Icon><materialDesign:PackIcon Kind="Image"/></MenuItem.Icon>
                                                        </MenuItem>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>

                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="حذف" Click="BtnDelete_Click" Height="30" Width="30" Margin="2,0">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="#FF5252"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Page>