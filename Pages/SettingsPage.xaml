<Page x:Class="FactorApp.UI.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="800"
      d:DesignWidth="1000"
      Title="تنظیمات"
      FlowDirection="RightToLeft"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      FontFamily="{DynamicResource MaterialDesignFont}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Grid.ColumnSpan="3"
                        Margin="0,0,0,20">
                <TextBlock Text="تنظیمات سیستم"
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <TextBlock Text="مدیریت ظاهر، اطلاعات فروشگاه و حساب کاربری"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Opacity="0.6"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="0">

                <materialDesign:Card Padding="20"
                                     Margin="0,0,0,20"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="Store"
                                                     Width="24"
                                                     Height="24"/>
                            <TextBlock Text="مشخصات چاپخانه (برای چاپ در فاکتور)"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <TextBox x:Name="TxtStoreName"
                                 materialDesign:HintAssist.Hint="نام فروشگاه"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,15"/>
                        <TextBox x:Name="TxtPhone"
                                 materialDesign:HintAssist.Hint="شماره تماس"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,15"/>
                        <TextBox x:Name="TxtAddress"
                                 materialDesign:HintAssist.Hint="آدرس"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,15"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"/>
                        <TextBox x:Name="TxtFooter"
                                 materialDesign:HintAssist.Hint="متن پایین فاکتور (مثلا: تشکر از خرید)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20"/>

                        <Button Content="ذخیره اطلاعات"
                                Click="BtnSaveInfo_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="2">

                <materialDesign:Card Padding="20"
                                     Margin="0,0,0,20"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="Palette"
                                                     Width="24"
                                                     Height="24"/>
                            <TextBlock Text="ظاهر برنامه"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <Grid>
                            <TextBlock Text="حالت تاریک (Dark Mode)"
                                       VerticalAlignment="Center"/>
                            <ToggleButton x:Name="TglDarkMode"
                                          HorizontalAlignment="Left"
                                          Click="TglDarkMode_Click"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="20"
                                     Margin="0,0,0,20"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="AccountKey"
                                                     Width="24"
                                                     Height="24"/>
                            <TextBlock Text="امنیت حساب"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <PasswordBox x:Name="TxtOldPass"
                                     materialDesign:HintAssist.Hint="رمز عبور فعلی"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Margin="0,0,0,15"/>
                        <PasswordBox x:Name="TxtNewPass"
                                     materialDesign:HintAssist.Hint="رمز عبور جدید"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Margin="0,0,0,20"/>

                        <Button Content="تغییر رمز عبور"
                                Click="BtnChangePass_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,0,10"/>

                        <Separator Margin="0,15"/>

                        <Button Content="خروج از حساب (Log Out)"
                                Click="BtnLogout_Click"
                                Background="#D32F2F"
                                BorderBrush="#D32F2F"
                                Foreground="White"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="20"
                                     materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="Database"
                                                     Width="24"
                                                     Height="24"/>
                            <TextBlock Text="دیتابیس"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <Button Content="پشتیبان‌گیری از اطلاعات"
                                Click="BtnBackup_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>