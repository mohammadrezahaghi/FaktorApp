<UserControl x:Class="FactorApp.UI.UserControls.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Width="400" Height="Auto" FontFamily="{DynamicResource MaterialDesignFont}"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <sys:Boolean x:Key="TrueValue">True</sys:Boolean>
        <sys:Boolean x:Key="FalseValue">False</sys:Boolean>
    </UserControl.Resources>

    <materialDesign:Card UniformCornerRadius="15" Padding="30"
                         materialDesign:ElevationAssist.Elevation="Dp0"
                         Background="{DynamicResource CardBackgroundBrush}"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource MaterialDesignDivider}">

        <StackPanel>
            <Grid Width="70" Height="70" Margin="0,0,0,20">
                <Border x:Name="GlowBorder" CornerRadius="25" Opacity="0.15">
                    <Border.Effect>
                        <BlurEffect Radius="20"/>
                    </Border.Effect>
                </Border>
                <Border x:Name="RingBorder" CornerRadius="25" BorderThickness="1.5" Opacity="0.3"/>
                <materialDesign:PackIcon x:Name="IconDisplay" Kind="QuestionMark" Width="35" Height="35"
                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <TextBlock x:Name="TxtTitle" Text="تایید عملیات"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       HorizontalAlignment="Center" FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="TxtMessage"
                       Text="آیا مطمئن هستید؟"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="{DynamicResource MaterialDesignBody}"
                       Opacity="0.7" FontSize="14"
                       Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <Button x:Name="BtnConfirm" Content="بله"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="{StaticResource TrueValue}"
                        Margin="5" Width="120" Height="40" FontSize="14" FontWeight="Bold"/>

                <Button x:Name="BtnCancel" Content="انصراف"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="{StaticResource FalseValue}"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Margin="5" Width="100" Height="40"/>
            </StackPanel>
        </StackPanel>
    </materialDesign:Card>
</UserControl>