<UserControl x:Class="FactorApp.UI.UserControls.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             Width="400" Height="Auto" FontFamily="{DynamicResource MaterialDesignFont}">

    <UserControl.Resources>
        <sys:Boolean x:Key="TrueValue">True</sys:Boolean>
        <sys:Boolean x:Key="FalseValue">False</sys:Boolean>

        <Color x:Key="IconGlowColor">#00C49F</Color>
        <SolidColorBrush x:Key="IconGlowBrush" Color="{StaticResource IconGlowColor}"/>
    </UserControl.Resources>

    <materialDesign:Card UniformCornerRadius="12" Padding="25" 
                         materialDesign:ElevationAssist.Elevation="Dp0"
                         Background="{DynamicResource CardBackgroundBrush}"
                         BorderThickness="1" 
                         BorderBrush="{DynamicResource MaterialDesignDivider}">
        
        <StackPanel>
            <Grid Width="60" Height="60" Margin="0,0,0,20">
                <Border CornerRadius="20" Background="{StaticResource IconGlowBrush}" Opacity="0.15">
                    <Border.Effect>
                        <BlurEffect Radius="15"/>
                    </Border.Effect>
                </Border>
                <Border CornerRadius="20" BorderThickness="1.5" BorderBrush="{StaticResource IconGlowBrush}" Opacity="0.3"/>
                <materialDesign:PackIcon Kind="QuestionMark" Width="30" Height="30" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                         Foreground="{StaticResource IconGlowBrush}"/>
            </Grid>

            <TextBlock Text="تایید عملیات" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                       HorizontalAlignment="Center" FontWeight="Bold"
                       Foreground="{DynamicResource SidebarForegroundBrush}"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="TxtMessage" 
                       Text="آیا از انجام این کار مطمئن هستید؟" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       Foreground="{DynamicResource SidebarForegroundBrush}"
                       Opacity="0.7" FontSize="14"
                       Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <Button Content="بله، مطمئنم" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="{StaticResource TrueValue}"
                        Background="{StaticResource IconGlowBrush}" 
                        BorderBrush="{StaticResource IconGlowBrush}"
                        Margin="5" Width="130" Height="40"/>

                <Button Content="انصراف" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="{StaticResource FalseValue}"
                        Foreground="{DynamicResource SidebarForegroundBrush}" 
                        BorderBrush="{DynamicResource SidebarForegroundBrush}"
                        Margin="5" Width="110" Height="40"/>
            </StackPanel>
        </StackPanel>
    </materialDesign:Card>
</UserControl>